# ========================================
# Zhan Airline - Environment Configuration
# ========================================
# Скопируйте этот файл как .env и заполните значения

# ─────────────────────────────────────────
# БЕЗОПАСНОСТЬ
# ─────────────────────────────────────────
# Секретный ключ для JWT токенов (минимум 32 символа!)
# Сгенерировать: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-min-32-characters-here

# Алгоритм шифрования JWT
ALGORITHM=HS256

# Время жизни токенов
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ─────────────────────────────────────────
# БАЗА ДАННЫХ
# ─────────────────────────────────────────
# SQLite (для разработки)
DATABASE_URL=sqlite:///./airline.db

# PostgreSQL (для production)
# DATABASE_URL=postgresql://user:password@localhost:5432/airline

# ─────────────────────────────────────────
# CORS - Разрешённые источники
# ─────────────────────────────────────────
# Для разработки (можно несколько через запятую)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:8080

# Для production
# ALLOWED_ORIGINS=https://your-domain.com

# ─────────────────────────────────────────
# РЕЖИМ РАБОТЫ
# ─────────────────────────────────────────
# true = режим разработки (подробные ошибки, debug CORS)
# false = production (строгая безопасность)
DEBUG=true

# ─────────────────────────────────────────
# ЛОГИРОВАНИЕ
# ─────────────────────────────────────────
LOG_LEVEL=INFO
